---
import Layout from "@/layouts/Layout.astro";
import { ForgotPasswordForm } from "@/components/auth/ForgotPasswordForm";

// Disable prerendering for SSR
export const prerender = false;
---

<Layout
  title="Resetowanie hasła - Athletica"
  description="Zresetuj hasło do swojego konta Athletica"
>
  <main class="min-h-screen flex items-center justify-center px-4 py-12 bg-background">
    <div class="w-full max-w-md">
      <ForgotPasswordForm client:load />
    </div>
  </main>
</Layout>
